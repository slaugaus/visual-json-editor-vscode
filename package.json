{
  "name": "visual-json",
  "displayName": "Visual JSON Editor",
  "description": "Open JSON files in a GUI that looks like the settings page",
  "icon": "./media/icon.png",
  "version": "1.0.0",
  "publisher": "slaugaus",
  "engines": {
    "vscode": "^1.93.0"
  },
  "license": "MIT",
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "json",
    "editor"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/slaugaus/visual-json-editor-vscode"
  },
  "homepage": "https://github.com/slaugaus/visual-json-editor-vscode",
  "bugs": {
    "url": "https://github.com/slaugaus/visual-json-editor-vscode/issues"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Visual JSON Editor",
      "properties": {
        "visual-json.outputPrettiness": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 10,
          "description": "Prettify saved JSON files and indent them with this many spaces. (0 to disable)"
        },
        "visual-json.maxFileSize": {
          "type": "number",
          "default": 256,
          "minimum": 0,
          "description": "Maximum file size (in kilobytes) the editor is allowed to open."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "visual-json.mainEditor",
        "displayName": "Visual JSON Editor",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "bun build.ts",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && bun build.ts --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@stylistic/eslint-plugin": "^2.13.0",
    "@types/bun": "^1.2.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.11",
    "@types/react": "^19.1.10",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vscode/codicons": "^0.0.36",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "bun": "^1.2.20",
    "esbuild": "^0.25.9",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "npm-run-all": "^2.3.0",
    "react": "^19.1.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "dependencies": {
    "lossless-json": "^4.1.1",
    "node-html-parser": "^6.1.13",
    "inferno": "^9.0.3",
    "inferno-create-element": "^9.0.3"
  }
}
